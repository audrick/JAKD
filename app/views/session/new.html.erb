<h1>Sign in</h1>
<%= form_tag '/signin' do %>
  <div class="field">
    Name:
    <%= text_field_tag 'name' %>
  </div>

  <div class="field">
    Password:
    <%= password_field_tag 'password' %>
  </div>

  <div class="field">
    <%= submit_tag 'Sign In' %>
  </div>
<% end %>

<%= link_to "Go to Home page", root_path %>

